$def with (posts, site_updated)
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
<title>$(settings.CMS_NAME)</title>
<subtitle>$(settings.SLOGAN)</subtitle>
<link rel="alternate" type="text/html" href="http://$(curdomain)/" />
<link rel="self" type="application/atom+xml" href="http://$(curdomain)/index.xml" />
<id>http://$(curdomain)/</id>
<updated>$site_updated</updated>
<rights>Copyright Â© 2011, $settings.CMS_NAME</rights>
$for post in posts:
    <entry>
        <title>$(post.title) - $(post.category)</title>
        <link rel="alternate" type="text/html" href="http://$(curdomain)/post/$post.get_path()" />
        <id>tag:$(curdomain),$(post.created.strftime("%Y-%m-%dT%H:%M:%SZ")):/post/$(post.key().id())</id>
        <published>$(post.created.strftime("%Y-%m-%dT%H:%M:%SZ"))</published>
        <updated>$(post.last_modified.strftime("%Y-%m-%dT%H:%M:%SZ"))</updated>
        <author>
            <name>$settings.AUTHOR_NAME)</name>
            <uri>http://$(curdomain)</uri> 
        </author>
        <content type="html" xml:base="http://$(curdomain)/" xml:lang="en"><![CDATA[$(post.description)]]></content>
    </entry>
</feed>